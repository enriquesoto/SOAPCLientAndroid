<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".MyActivity"

    android:background="#ff90fffb">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/logoImage"
        android:background="@drawable/logo"
        android:contentDescription="@string/imagenDescription"
        android:padding="80dp"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mEditTextCUI"
        android:layout_below="@+id/logoImage"
        android:hint="@string/studentId"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mEditTextCodCurso"
        android:layout_below="@+id/mEditTextCUI"
        android:hint="@string/courseId"
        />
    <Button
        android:id="@+id/mBttnQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mEditTextCodCurso"
        android:text="@string/query"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:layout_below="@+id/mBttnQuery"
        android:padding="10dp"
        android:id="@+id/resultLabel"/>
    <TextView
        android:id="@+id/mResultQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultLabel"
        />
</RelativeLayout>
